# Environment Configuration Template
# Copy this file to .env and update the values for your production deployment

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=False
DJANGO_SETTINGS_MODULE=skillswap.settings_production
DJANGO_ALLOWED_HOSTS=your-app-domain.com,localhost,127.0.0.1

# Database (Optional - Leave empty to use SQLite)
# DATABASE_URL=postgresql://user:password@host:port/database

# CORS Settings (add your Netlify domain here)
NETLIFY_URL=https://your-netlify-app.netlify.app
CORS_ALLOW_ALL_ORIGINS=False

# Deployment Settings
PORT=8000